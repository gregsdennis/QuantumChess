<Window x:Class="QuantumChess.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:QuantumChess.App.Controls"
        xmlns:app="clr-namespace:QuantumChess.App"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance {x:Type app:MainWindowModel}}"
        Title="MainWindow" SizeToContent="WidthAndHeight">
	<Grid>
		<controls:BoardView BoardSpace="{Binding BoardSpace}"/>
	</Grid>
</Window>